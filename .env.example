# Search provider (DuckDuckGo HTML + BeautifulSoup)
SEARCH_PROVIDER=duckduckgo_html
SEARCH_API_URL=https://html.duckduckgo.com/html/
# Optional: only required for providers z kluczem
SEARCH_API_KEY=
SEARCH_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/137.0.0.0 Safari/537.36"
SEARCH_LANGUAGE=us-en

# Rate limiting
MAX_CONCURRENT_PER_AGENT=5
MAX_QUERIES_PER_MIN=60
REQUEST_TIMEOUT_SECONDS=15

# Observability
METADATA_RETENTION_DAYS=30
ENABLE_TRACING=false

# Development aids
# Set to true to używać wyłącznie danych stubowych (bez zapytań sieciowych)
USE_STUB_DATA=false
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=600
